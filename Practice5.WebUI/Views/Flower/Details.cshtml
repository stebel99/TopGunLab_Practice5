@model Practice5.Domain.Entities.Flower

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Flower</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Color)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>

        <dt>
            @Html.DisplayName("Plantations")
        </dt>
        @{var plantations = Model?.PlantationFlowers?.Where(x => x?.FlowerId == Model?.Id);
            if (plantations != null)
            {
                foreach (var plantation in plantations)
                {
                    <dd>
                        @plantation.Plantation.Name
                    </dd>
                }
            }
            <dd>
                -
            </dd>
        }
        <dt>
            @Html.DisplayName("Test")
        </dt>
        @for (int i = 0; i < 10; i++)
        {
            <dd>
                @i
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
